@model CapInnovativeIdia.Domain.ViewModels.CreateIdiaViewModel
@{
    ViewData["Title"] = "Create";
}
<style>

    .help-block {
        display: block;
        margin-top: 5px;
        margin-bottom: 10px;
        color: #dd4b39;
        font-weight: 600;
    }
</style>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Share Your Idia With Us</h3>
    </div>
    <form role="form" asp-controller="Idia" asp-action="Create" method="post">
        <div class="box-body">
            <div class="form-group">
                <label asp-for="Idia.Title">Idia Title</label>
                <input asp-for="Idia.Title" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter your idia title">
                <span class="help-block" asp-validation-for="Idia.Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Idia.TeamId">Customer</label>
                <select asp-for="Idia.TeamId" asp-items="@(new SelectList(Model.Teams,"Id","Name"))" class="form-control">
                    <option value="">Select</option>
                </select>
                <span class="help-block" asp-validation-for="Idia.TeamId"></span>
            </div>

            <div class="form-group">
                <label asp-for="Idia.CategoryId">Idia Category</label>
                <select asp-for="Idia.CategoryId" asp-items="@(new SelectList(Model.IdiaCategories,"Id","Name"))" class="form-control">
                    <option value="">Select</option>
                </select>
                <span class="help-block" asp-validation-for="Idia.CategoryId"></span>
            </div>

            <div class="form-group">
                <label asp-for="Idia.IdiaProposalId">Idia Proposal</label>
                <select asp-for="Idia.IdiaProposalId" asp-items="@(new SelectList(Model.IdiaProposals,"Id","Name"))" class="form-control">
                    <option value="">Select</option>
                </select>
                <span class="help-block" asp-validation-for="Idia.IdiaProposalId"></span>
            </div>

            <div class="form-group">
                <label asp-for="Idia.IdiaDescription">Your Idia</label>
                <textarea asp-for="Idia.IdiaDescription" class="form-control" rows="5" placeholder="Describe your idia here.."></textarea>
                <span class="help-block" asp-validation-for="Idia.IdiaDescription"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idia.IdiaBenifit">Your Idia</label>
                <textarea asp-for="Idia.IdiaBenifit" class="form-control" rows="5" placeholder="Describe your idia benefits here.."></textarea>
                <span class="help-block" asp-validation-for="Idia.IdiaBenifit"></span>
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Idia" asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>
