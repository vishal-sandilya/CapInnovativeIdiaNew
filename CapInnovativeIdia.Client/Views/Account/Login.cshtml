@model CapInnovativeIdia.Domain.ViewModels.LoginUserViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/libs/bootstrap/css/bootstrap.min.css">
    <link href="~/libs/admin-lte/css/AdminLTE.css" rel="stylesheet" />
    <link href="~/libs/login-page/css/loginPage.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Cap</b>Innovative Idia</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            @{
                if (TempData["Error"] != null)
                {
                        <span class="help-block serverResponseMessage">@TempData["Error"].ToString()</span>
                }
            }
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group has-feedback">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span class="help-block" asp-validation-for="Email"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span class="help-block" asp-validation-for="Password"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <a asp-controller="Account" asp-action="ForgotPassword">I forgot my password</a>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/libs/bootstrap/js/bootstrap.min.js"></script>
</body>
