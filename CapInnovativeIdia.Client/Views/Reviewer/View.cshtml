@model CapInnovativeIdia.Domain.ViewModels.ViewIdiaViewModel
@{
    ViewData["Title"] = "View";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">View Idia</h3>
    </div>
    <form role="form" asp-controller="Reviewer" asp-action="Action" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="box-body">
            <div class="form-group">
                <label>Idia Title</label>
                <span asp-validation-for="Title" class="help-block"></span>
                <input type="text" asp-for="Title" class="form-control" id="exampleInputEmail1" disabled>
            </div>

            <div class="form-group">
                <label>Customer</label>
                <select class="form-control" disabled>
                    <option selected>@Model.Customer</option>
                </select>
            </div>

            <div class="form-group">
                <label>Idia Category</label>
                <select class="form-control" disabled>
                    <option selected>@Model.IdiaCategory</option>
                </select>
            </div>

            <div class="form-group">
                <label>Idia Proposal</label>
                <select class="form-control" disabled>
                    <option selected>@Model.IdiaProposal</option>
                </select>
            </div>

            <div class="form-group">
                <label>Your Idia</label>
                <textarea asp-for="IdiaDescription" class="form-control" rows="5" placeholder="Describe Your Idia Here.." disabled></textarea>
            </div>
            <div class="form-group">
                <label>Your Idia</label>
                <textarea asp-for="IdiaBenifit" class="form-control" rows="5" placeholder="Describe Your Idia Benifits Here.." disabled></textarea>
            </div>
        </div>
        <div class="box-footer">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#approve-model">Approve</button>
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#reject-model">Reject</button>
            <a asp-controller="Reviewer" asp-action="Index" class="btn btn-primary">Back</a>
        </div>

        <div class="modal fade" id="approve-model">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Confirmation</h4>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure do you want to approve this idia?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-toggle="modal" data-target="#approve-model">Close</button>
                        <button type="submit" id="approve" name="actionType" value="Approve" class="btn btn-primary">Approve</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

        <div class="modal fade" id="reject-model">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Confirmation</h4>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure do you want to reject this idia?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-toggle="modal" data-target="#reject-model">Close</button>
                        <button type="submit" id="reject" name="actionType" value="Reject" class="btn btn-primary">Reject</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.box-body -->
    </form>
</div>



